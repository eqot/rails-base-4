<div class="page-header">
  <h1>Problems</h1>
</div>

<div class="list-group">
  <% @problems.each do |problem| %>
    <%= link_to(problem, class: 'list-group-item') do %>
      <h4 class="list-group-item-heading">
        <%= problem.title %>
      </h4>
      <p class="list-group-imtem-text">
        <%= problem.description %>
      </p>
    <% end %>
  <% end %>
</div>
