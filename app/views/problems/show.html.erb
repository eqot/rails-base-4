<div class="page-header">
  <h2>
    <%= @problem.title %>
  </h2>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Submitter
  </div>
  <div class="panel-body">
    <%= image_tag @problem.owner.image_url %>
    <%= @problem.owner.name %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Description
  </div>
  <div class="panel-body">
    <%= markdown(@problem.description) %>
  </div>
</div>

<% if @problem.submitted_by?(current_user) %>
  <%= link_to 'Edit problem', edit_problem_path(@problem), class: 'btn btn-info' %>
  <%= link_to 'Delete problem', problem_path(@problem), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>
