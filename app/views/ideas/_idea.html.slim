= link_to(idea, class: "list-group-item list-item", data: { model_name: idea.class.name.underscore, update_url: idea_sort_path(idea), delete_url: idea_unlike_path(idea) })
  h4.list-group-item-heading
    = idea.title

  .list-group-item-text.clearfix
    p.ellipsis
      - if idea.description?
        = Markdown.to_text(idea.description)

    .pull-right
      = timeago(idea.created_at)
      - if idea.owner
        => image_tag idea.owner_image_url, class: "gravatar"
        = idea.owner_name

    span.icon
      i.fa.fa-thumbs-up
      = idea.liked_users.count

    - if idea.file?
      span.icon
        i.fa.fa-file-text-o
